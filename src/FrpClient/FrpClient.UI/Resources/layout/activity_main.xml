<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:overScrollMode="ifContentScrolls">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/configTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="21.0dp"
            android:text="@string/title_frpType"
            android:textStyle="bold" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">
            <RadioButton
                android:id="@+id/frpsType"
                android:text="@string/frpsType"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"/>
            <RadioButton
                android:id="@+id/frpcType"
                android:checked="true"
                android:text="@string/frpcType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
        <TextView
            android:id="@+id/status"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="21.0dp"
            android:text="@string/stop"
            android:textStyle="bold" />
    </LinearLayout>
    <EditText
        android:layout_row="1"
        android:layout_columnSpan="3"
        android:id="@+id/editTextForConfig"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:gravity="top"/>
    <Button
        android:layout_row="2"
        android:layout_columnSpan="3"
        android:id="@+id/buttonStart"
        android:text="@string/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_row="3"
        android:layout_columnSpan="3"
        android:text="@string/stop"
        android:id="@+id/buttonStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"/>
</LinearLayout>
